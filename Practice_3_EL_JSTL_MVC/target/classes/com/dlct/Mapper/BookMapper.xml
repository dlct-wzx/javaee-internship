<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dlct.dao.BookDao">

    <select id="queryAllBook" resultType="com.dlct.pojo.Book">
        select * from javaee_practice.book
    </select>

    <select id="queryBookById" resultType="com.dlct.pojo.Book" parameterType="int">
        select * from javaee_practice.book where id=#{id}
    </select>

    <select id="queryBookByName" resultType="com.dlct.pojo.Book" parameterType="String">
        select * from javaee_practice.book where name=#{name}
    </select>

    <update id="updateBook" parameterType="com.dlct.pojo.Book">
        update javaee_practice.book set id=#{id}, name=#{name} where id=#{id}
    </update>

    <delete id="deleteBook" parameterType="int">
        delete from javaee_practice.book where id=#{id}
    </delete>

    <insert id="insertBook" parameterType="com.dlct.pojo.Book">
        insert into javaee_practice.book values (#{id}, #{name})
    </insert>

</mapper>